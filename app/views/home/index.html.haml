#acceuil.col-md-12.col-sm-12.col-xs-12
  #acceuil-back
    .col-md-4.accueil-bloc.col-sm-6.col-xs-12.block
      #flash-msg.col-md-offset-1.col-md-4.col-sm-6.col-xs-12.block
        - flash.each do |key, msg|
          = content_tag(:div, msg, class: "alert alert-#{key}")
      .contact-form.block
        %h3.form-title.pull-left
          Pour être informé de l’ouverture du site, inscrivez vous à la newsletter !
        = form_for @contact, class: 'form-group', method: :post do |f|
          .form-group
            = f.email_field :email, class: 'form-control', placeholder: 'Email'
          .form-group
            = f.submit "S'inscrire", class: 'btn btn-default btn-block'
#home-button.col-md-12.col-sm-12.col-xs-12.home-scroll-down
  = link_to "#footer", id: "link-button", data: {link: 'footer'} do
    %i.glyphicon.glyphicon-chevron-down
#footer.col-md-12.col-sm-12.col-xs-12
  .footer-contenaire
    .col-md-offset-1.col-md-2.ucd-info.col-sm-3.col-xs-12
      %h4
        Contact :

      = link_to root_path do
        = image_tag 'ucd-logo.png', class: 'img-responsive'
      %address
        = link_to "contact@ultimatecycledistributon.com", "mailto:#", class: "mail"
    .col-md-offset-2.col-md-7.parteners.col-sm-9.col-xs-12.block
      %h2
        Distributeur officiel pour la France des marques :
      .col-md-12.col-xs-12.col-sm-12.partenaires-bloc
        .col-md-4.col-xs-12.col-sm-4.block.surly
          = link_to 'http://surlybikes.com/', target: "_blank" do
            = image_tag 'surly_Logo.jpg', class: 'img-responsive'
        .col-md-4.col-xs-12.col-sm-4.block
          = link_to 'http://45nrth.com/', target: "_blank" do
            = image_tag '45Nrth-logo-main.jpg', class: 'img-responsive'
        .col-md-4.col-xs-12.col-sm-4.block
          = link_to 'http://www.problemsolversbike.com/', target: "_blank" do
            = image_tag 'problemsolvers.png', class: 'img-responsive'


